<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Business"
    tools:showIn="@layout/activity_business">

    <TextView
        android:id="@+id/Question"
        android:layout_width="352dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        android:text="@string/buizQuestion"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="448dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Question">

        <Button
            android:id="@+id/Efficiency"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="Efficiency" />

        <Button
            android:id="@+id/Cost_Optimization"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Cost Optimization" />

        <Button
            android:id="@+id/EM"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Energy Management" />

        <Button
            android:id="@+id/carbonfoot"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Minimizing Carbon Footprint" />

        <Button
            android:id="@+id/Renewable"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="Renewable" />

        <Button
            android:id="@+id/infra"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Infrastructure Repair" />

        <Button
            android:id="@+id/Other"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="other" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>